
/*Guna scanner input, masukkan satu nombor integer. 
 * Bahagikan nombor tersebut dengan 5, jika ia berbaki dengan 0, maka print nomber tersebut adalah odd. 
 * Bahagikan nombor tersebut dengan 2, jika baklinya adalah 0, maka print nomber tersebut ialah even.
 */


package exercise;

import java.util.Scanner;

public class Exercise1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		
		int num;
		
		System.out.print("Enter a number : ");
		num = sc.nextInt();
		
		if (num % 5 != 0)
			System.out.print("\nOdd Number.");
		
		else if (num % 2 == 0)
			System.out.print("\nEven Number.");
		
		

	}

}
